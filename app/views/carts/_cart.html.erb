<fieldset>
	<legend> My Cart </legend>
	<table class="table">
		<tr>
			<th>Title</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
		<% cart.cart_items.each do |item| %>
				<%= render item %>
				<% end %>	
		<tr>
			<td>Total price:</td>
			<td class="cart-item-price"><%=  cart.total_price %> USD </td>	
			<td></td>
		</tr>		
	</table>


	<div>
		<%= button_to "Checkout", new_order_path, method: :get %>
	</div>
</fieldset>
