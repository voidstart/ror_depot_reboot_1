<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "App" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "App" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
        <div class="contanier-fluid">
          <div class="row-fluid">
            <div class="span3">
              <div class="well sidebar-nav">
                <div id="cartpane">
                  <% if @cart %>
                    <% unless @cart.cart_items.empty? %>
                      <%= render @cart %>
                    <% end %>
                  <% end %>
                </div>
              </div><!--/.well -->
            </div><!--/span-->
            <div class="span9">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div><!--/row-->

        </div> <!-- /container -->
    </main>
    <footer>
      <p>&copy; VoidStart 2013</p>
    </footer>
  </body>
</html>
